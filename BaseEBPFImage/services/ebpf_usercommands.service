[Unit]
Description=Starts eBPF user command tracking service
ConditionPathExists=/srv/usercommands.py
After=multi-user.target

[Service]
Type=simple
ExecStartPre=bash -c "mkdir -p /var/log/ebpf && touch /var/log/ebpf/usercommand.log"
ExecStart=/usr/bin/python3 /srv/usercommands.py

[Install]
WantedBy=multi-user.target